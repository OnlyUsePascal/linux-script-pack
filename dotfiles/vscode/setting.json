{
  // auto save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10,

  
  // layout
  "workbench.tree.indent": 19,
  "explorer.sortOrder": "type",
  "window.restoreWindows": "none",
  "workbench.activityBar.location": "hidden",
  "terminal.integrated.commandsToSkipShell": ["workbench.action.focusSideBar"],

  
  // behavior
  "C_Cpp.intelliSenseUpdateDelay": 500,
  "C_Cpp.codeAnalysis.updateDelay": 500,
  
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.quickSuggestionsDelay": 5,
  "editor.autoClosingOvertype": "always",
  "editor.trimAutoWhitespace": false,
  
  "window.openFoldersInNewWindow": "off",
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false,
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "auto",
  
  "security.workspace.trust.untrustedFiles": "open",
  "git.openRepositoryInParentFolders": "never",
  
  "workbench.panel.defaultLocation": "right",
  "workbench.layoutControl.type": "toggles",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "files.associations": {
    "*.desktop": "ini"
  },
  
  // terminal
  "debug.console.fontSize": 13,
  "terminal.integrated.cwd": "${fileDirname}",
  "terminal.integrated.fontSize": 13,

  
  // theme
  "editor.fontSize": 13,
  "editor.fontFamily": "'Liberation Mono', 'monospace', monospace",
  "editor.tabSize": 2,
  "editor.cursorWidth": 3,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Dimmed",
  
  
  // theme
  "update.mode": "none",
  "update.showReleaseNotes": false,
  "extensions.autoCheckUpdates": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "code-runner.runInTerminal": true,
  "diffEditor.wordWrap": "off",

  
  // python 
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true,
  "python.languageServer": "Pylance",
  
    // latex
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"],
      "env": {}
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "pdfLaTeX",
      "tools": ["pdflatex"]
    },
    {
      "name": "latexmk ðŸ”ƒ",
      "tools": ["latexmk"]
    },
    {
      "name": "xelatex",
      "tools": ["xelatex"]
    },
    {
      "name": "pdflatex âžž bibtex âžž pdflatex`Ã—2",
      "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
    },
    {
      "name": "xelatex âžž bibtex âžž xelatex`Ã—2",
      "tools": ["xelatex", "bibtex", "xelatex", "xelatex"]
    }
  ],
  
    // js
  "eslint.debug": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "window.title": "${rootName}${separator}${remoteName}${separator}${appName}",
  
  
}
